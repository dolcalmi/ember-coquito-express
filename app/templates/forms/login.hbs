<div class="form-group">
    {{input type="email" class="form-control" tabindex="1" placeholder=(t "login.email") value=model.email required="required" maxlength="255"}}
</div>
<div class="form-group">
    {{input type="password" class="form-control" tabindex="2" placeholder=(t "login.password") value=model.password required=" required" maxlength="255"}}
</div>
<div class="form-group text-center">
    {{input type="checkbox" tabindex="3" class="" name="remember" checked=model.rememberMe }}
    <label for="remember"> {{t "login.rememberMe"}}</label>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <button type="submit" tabindex="4" class="form-control btn btn-login"
                    data-loading-text="{{t "login.loading"}}"
                    id="btn-add">
                {{t "login.button"}}
            </button>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center">
                {{#link-to "forgot" tabindex="5" class="forgot-password"}} {{t "menu.forgot"}} {{/link-to}}
            </div>
        </div>
    </div>
</div>
