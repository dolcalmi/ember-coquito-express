
<div class="form-group">
    {{input class="form-control" tabindex="1" placeholder=(t "signup.firstName") value=model.firstName required="required" maxlength="255"}}
</div>
<div class="form-group">
    {{input class="form-control" tabindex="2" placeholder=(t "signup.lastName") value=model.lastName required="required" maxlength="255"}}
</div>
<div class="form-group">
    {{input type="email" class="form-control" tabindex="3" placeholder=(t "signup.email") value=model.email required="required" maxlength="255"}}
</div>
<div class="form-group">
    {{input id="newPassword" type="password" class="form-control" tabindex="4" placeholder=(t "signup.password") value=model.password required="required" data-parsley-minlength="6" data-parsley-maxlength="25"}}
</div>
<div class="form-group">
    {{input type="password" class="form-control" tabindex="5" placeholder=(t "signup.confirmPassword") required="required" data-parsley-minlength="6" data-parsley-maxlength="25" data-parsley-equalto="#newPassword"}}
</div>
<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <button type="submit" tabindex="4" class="form-control btn btn-signup"
                    data-loading-text="{{t "signup.loading"}}"
                    id="btn-add">
                {{t "signup.button"}}
            </button>
        </div>
    </div>
</div>
